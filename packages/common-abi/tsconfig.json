{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["./src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "CommonJS",
    "target": "ES2022",
    
    "strict": true,
    "inlineSourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true
  }
}
