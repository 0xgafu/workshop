{
  "name": "@gasrunners/<pkg-name>",
  "version": "0.0.1",
  "description": "My new NPM package.",
  "main": "./dist/index",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "lint": "eslint . --ext .js,.ts --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "homepage": "https://github.com/gasrunnners/workshop/tree/main/packages/<pkg-name>",
  "repository": {
    "type": "git",
    "url": "https://github.com/gasrunnners/workshop.git",
    "directory": "packages/<pkg-name>"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [],
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.20.0",
    "tsup": "^6.5.0",
    "typescript": "^4.8.3",
    "vitest": "^0.23.4"
  }
}
