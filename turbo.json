{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": [".env"],
  "globalEnv": ["INFURA_KEY"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "env": ["NODE_ENV", "VERCEL_URL", "PORT"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "env": ["NODE_ENV", "VERCEL_URL", "PORT"],
      "outputs": []
    },
    "lint:fix": {
      "outputs": []
    },
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false
    },
    "test": {
      "outputs": []
    },
    "test:watch": {
      "cache": false
    },
    "test:coverage": {
      "outputs": []
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    }
  }
}
